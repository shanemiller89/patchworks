{
  "name": "patchworks",
  "version": "0.1.0",
  "description": "A CLI tool to manage dependency updates by semantic versioning, breaking change detection, and batch selection for efficient prioritization",
  "main": "src/cli/index.ts",
  "bin": {
    "patchworks": "./bin/patchworks.ts"
  },
  "files": [
    "bin/",
    "src/",
    "analysis/",
    "config/",
    "menus/",
    "prompts/",
    "reports/",
    "tasks/",
    "utils/",
    "versionLogs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint -c .eslintrc.json \"src/**/*.js\" \"analysis/**/*.js\" \"config/**/*.js\" \"menus/**/*.js\" \"prompts/**/*.js\" \"reports/**/*.js\" \"tasks/**/*.js\" \"utils/**/*.js\" \"versionLogs/**/*.js\"",
    "lint:fix": "eslint -c .eslintrc.json \"src/**/*.js\" \"analysis/**/*.js\" \"config/**/*.js\" \"menus/**/*.js\" \"prompts/**/*.js\" \"reports/**/*.js\" \"tasks/**/*.js\" \"utils/**/*.js\" \"versionLogs/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\" \"analysis/**/*.js\" \"config/**/*.js\" \"menus/**/*.js\" \"prompts/**/*.js\" \"reports/**/*.js\" \"tasks/**/*.js\" \"utils/**/*.js\" \"versionLogs/**/*.js\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "tsc",
    "prepare": "chmod +x bin/patchworks.js",
    "pre-publish": "./scripts/pre-publish.sh",
    "prepublishOnly": "./scripts/pre-publish.sh && npm run lint && npm run type-check && npm test",
    "local:install": "npm link",
    "local:uninstall": "npm unlink"
  },
  "keywords": [
    "cli",
    "dependency-management",
    "semantic-versioning",
    "breaking-changes",
    "npm",
    "package-management",
    "release-notes",
    "github",
    "dependency-updates",
    "package-updates",
    "version-management",
    "changelog-analysis",
    "tfidf-ranking",
    "vulnerability-detection",
    "patch-management",
    "minor-updates",
    "major-updates",
    "dependency-analysis",
    "npm-audit",
    "package-security",
    "devops",
    "automation",
    "maintenance"
  ],
  "author": "Shane Miller <your-email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanemiller89/patchworks.git"
  },
  "bugs": {
    "url": "https://github.com/shanemiller89/patchworks/issues"
  },
  "homepage": "https://github.com/shanemiller89/patchworks#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "type": "module",
  "dependencies": {
    "@inquirer/prompts": "^7.3.2",
    "@listr2/prompt-adapter-inquirer": "^2.0.18",
    "@octokit/rest": "^21.1.1",
    "align-text": "^1.0.2",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.0.0",
    "check-types": "^11.2.3",
    "cheerio": "^1.0.0",
    "commander": "^13.0.0",
    "compromise": "^14.14.3",
    "conventional-commits-parser": "^6.1.0",
    "inquirer": "^12.4.2",
    "inquirer-file-selector": "^0.6.1",
    "listr2": "^8.2.5",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "marked": "^4.2.0",
    "npm-registry-fetch": "^18.0.2",
    "ora": "^5.4.1",
    "sanitize-html": "^2.14.0",
    "semver": "^7.3.8",
    "table": "^6.9.0",
    "tar-stream": "^3.1.7",
    "tiny-tfidf": "^0.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.9",
    "@types/align-text": "^1.0.4",
    "@types/conventional-commits-parser": "^5.0.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/semver": "^7.7.0",
    "@types/tar-stream": "^3.1.4",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "typescript": "^5.9.2"
  }
}
