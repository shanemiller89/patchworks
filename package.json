{
  "name": "patchworks-cli",
  "version": "0.1.0",
  "description": "A CLI tool to manage dependency updates by semantic versioning, breaking change detection, and batch selection for efficient prioritization",
  "main": "dist/src/cli/index.js",
  "bin": {
    "patchworks": "./dist/bin/patchworks.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx bin/patchworks.ts",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint -c .eslintrc.json \"src/**/*.ts\" \"analysis/**/*.ts\" \"config/**/*.ts\" \"menus/**/*.ts\" \"prompts/**/*.ts\" \"reports/**/*.ts\" \"tasks/**/*.ts\" \"utils/**/*.ts\" \"versionLogs/**/*.ts\" \"bin/**/*.ts\" --ignore-pattern \"**/*.test.ts\"",
    "lint:fix": "eslint -c .eslintrc.json \"src/**/*.ts\" \"analysis/**/*.ts\" \"config/**/*.ts\" \"menus/**/*.ts\" \"prompts/**/*.ts\" \"reports/**/*.ts\" \"tasks/**/*.ts\" \"utils/**/*.ts\" \"versionLogs/**/*.ts\" \"bin/**/*.ts\" --ignore-pattern \"**/*.test.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"analysis/**/*.ts\" \"config/**/*.ts\" \"menus/**/*.ts\" \"prompts/**/*.ts\" \"reports/**/*.ts\" \"tasks/**/*.ts\" \"utils/**/*.ts\" \"versionLogs/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "chmod +x dist/bin/patchworks.js",
    "prepare": "npm run build",
    "pre-publish": "./scripts/pre-publish.sh",
    "prepublishOnly": "./scripts/pre-publish.sh && npm run type-check && npm test",
    "local:install": "npm link",
    "local:uninstall": "npm unlink"
  },
  "keywords": [
    "cli",
    "dependency-management",
    "semantic-versioning",
    "breaking-changes",
    "npm",
    "package-management",
    "release-notes",
    "github",
    "dependency-updates",
    "package-updates",
    "version-management",
    "changelog-analysis",
    "tfidf-ranking",
    "vulnerability-detection",
    "patch-management",
    "minor-updates",
    "major-updates",
    "dependency-analysis",
    "npm-audit",
    "package-security",
    "devops",
    "automation",
    "maintenance"
  ],
  "author": "Shane Miller <your-email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shanemiller89/patchworks.git"
  },
  "bugs": {
    "url": "https://github.com/shanemiller89/patchworks/issues"
  },
  "homepage": "https://github.com/shanemiller89/patchworks#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "type": "module",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/genai": "^1.22.0",
    "@inquirer/prompts": "^7.3.2",
    "@listr2/prompt-adapter-inquirer": "^2.0.18",
    "@octokit/rest": "^21.1.1",
    "align-text": "^1.0.2",
    "axios": "^1.7.9",
    "boxen": "^8.0.1",
    "chalk": "^5.0.0",
    "check-types": "^11.2.3",
    "cheerio": "^1.0.0",
    "commander": "^13.0.0",
    "compromise": "^14.14.3",
    "conventional-commits-parser": "^6.1.0",
    "inquirer": "^12.4.2",
    "inquirer-file-selector": "^0.6.1",
    "listr2": "^8.2.5",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "marked": "^16.4.0",
    "npm-registry-fetch": "^19.0.0",
    "openai": "^6.2.0",
    "ora": "^9.0.0",
    "sanitize-html": "^2.17.0",
    "semver": "^7.7.3",
    "table": "^6.9.0",
    "tar-stream": "^3.1.7",
    "tiny-tfidf": "^0.9.1"
  },
  "devDependencies": {
    "@types/align-text": "^1.0.4",
    "@types/conventional-commits-parser": "^5.0.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.0",
    "@types/semver": "^7.7.1",
    "@types/tar-stream": "^3.1.4",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}