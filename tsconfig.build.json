{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "bin/**/*.ts",
    "config/**/*.ts",
    "menus/**/*.ts",
    "prompts/**/*.ts",
    "reports/**/*.ts",
    "src/**/*.ts",
    "tasks/**/*.ts",
    "utils/**/*.ts",
    "versionLogs/**/*.ts",
    "analysis/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
